<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.authentication.contact.ContactActivity">


    <include layout="@layout/layout_toolbar" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@mipmap/img_progress4"
        android:scaleType="centerCrop" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="14dp"
                android:text="@string/first_contact"
                android:textColor="@color/blue_ff32"
                android:textStyle="bold" />


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="18dp"
                android:layout_margin="18dp"
                android:layout_height="wrap_content">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="18dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <com.neutron.mexicoloan.ui.view.CertificationItemView
                        android:id="@+id/civ_relation"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:c_view_style="text"
                        app:title_text="@string/relation"
                        />

                    <com.neutron.mexicoloan.ui.view.CertificationItemView
                        android:id="@+id/civ_contact_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:c_view_style="text"
                        app:title_text="@string/contact_name"
                        />

                    <com.neutron.mexicoloan.ui.view.CertificationItemView
                        android:id="@+id/civ_contact_phone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:c_view_style="text"
                        app:title_text="@string/contact_phone"
                        />




                </LinearLayout>


            </androidx.cardview.widget.CardView>




<!--           第二 -->


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="14dp"
                android:text="@string/two_contact"
                android:textColor="@color/blue_ff32"
                android:textStyle="bold" />


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="18dp"
                android:layout_margin="18dp"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="18dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <com.neutron.mexicoloan.ui.view.CertificationItemView
                        android:id="@+id/civ_relation_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:c_view_style="text"
                        app:title_text="@string/relation"
                        />

                    <com.neutron.mexicoloan.ui.view.CertificationItemView
                        android:id="@+id/civ_contact_name_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:c_view_style="text"
                        app:title_text="@string/contact_name"
                        />

                    <com.neutron.mexicoloan.ui.view.CertificationItemView
                        android:id="@+id/civ_contact_phone_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:c_view_style="text"
                        app:title_text="@string/contact_phone"
                        />




                </LinearLayout>


            </androidx.cardview.widget.CardView>



            <Button
                android:id="@+id/btn_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="32dp"
                android:background="@drawable/shape_btn_blue"
                android:text="@string/next_step"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />


        </LinearLayout>


    </ScrollView>


</LinearLayout>
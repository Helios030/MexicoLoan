<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="VerificationCodeView">
        <attr name="vcv_spacingItem" format="dimension"/>
        <attr name="vcv_inputWidth" format="dimension"/>
        <attr name="vcv_inputHeight" format="dimension"/>
        <attr name="vcv_radius" format="dimension"/>
        <attr name="vcv_inputCount" format="integer"/>
        <attr name="vcv_lineColor" format="color"/>
        <attr name="vcv_lineActiveColor" format="color"/>
        <attr name="vcv_cursorColor" format="color"/>
        <attr name="vcv_textColor" format="color"/>
        <attr name="vcv_textSize" format="dimension"/>
        <attr name="vcv_lineHeight" format="dimension"/>
        <attr name="vcv_strokeSize" format="dimension"/>
        <attr name="vcv_style" format="flags">
            <flag name="underline" value="0"/>
            <flag name="box" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="LoginView">

        <attr name="view_style" format="flags">
            <flag name="bind" value="0"/>
            <flag name="login" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="BottomBar">


    </declare-styleable>

    <declare-styleable name="CertificationItemView">
        <attr name="c_view_style" format="flags">

        <flag name="input" value="0"/>
        <flag name="text" value="1"/>
        <flag name="show" value="2"/>

        </attr>
        <attr name="title_text_color" format="color|reference" />
        <attr name="title_text" format="string" />
        <attr name="tv_text" format="string" />
        <attr name="title_text_size" format="integer" />
        <attr name="et_text_color" format="color|reference" />
        <attr name="et_text" format="string" />
        <attr name="et_hint" format="string" />
        <attr name="et_hint_text_color" format="color|reference" />
        <attr name="tv_right_icon" format="reference|color" />
        <attr name="et_text_size" format="integer" />
        <attr name="tv_left_text" format="string" />
        <attr name="is_show_line" format="boolean" />
        <attr name="is_number" format="boolean" />

    </declare-styleable>

</resources>
